<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11214D"
    android:padding="16dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Kembali" />

    <TextView
        android:id="@+id/tvNamaMatkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PPL"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvSemesterTahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganjil/2025"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnMahasiswa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Mahasiswa"
            android:background="#555555"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnJadwal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Jadwal"
            android:background="#FFFF99"
            android:textColor="#000000" />
    </LinearLayout>

    <EditText
        android:id="@+id/etNamaMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:layout_marginTop="16dp"
        android:background="#DDDDDD" />

    <Button
        android:id="@+id/btnTambahMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:background="#F5FF7D"
        android:layout_gravity="end"
        android:layout_marginTop="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView android:text="NIM" android:textColor="#FFFFFF" />
                <TextView android:text="Nama" android:textColor="#FFFFFF" />
                <TextView android:text="Status" android:textColor="#FFFFFF" />
                <TextView android:text="Aksi" android:textColor="#FFFFFF" />
            </TableRow>

            <!-- Baris mahasiswa akan ditambahkan dinamis lewat adapter -->
        </TableLayout>
    </ScrollView>
</LinearLayout>
