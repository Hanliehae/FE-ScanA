<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Semester -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester" />
    <Spinner
        android:id="@+id/spinnerSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <!-- Tahun Akademik -->
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tahun Akademik" />
    <EditText
        android:id="@+id/edtTahunAkademik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh: 2025" />

    <!-- ID MK -->
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID MK" />
    <EditText
        android:id="@+id/edtIdMk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh: IF123" />

    <!-- Kelas -->
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas" />
    <EditText
        android:id="@+id/edtKelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh: A" />

    <!-- Nama MK -->
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama MK" />
    <EditText
        android:id="@+id/edtNamaMk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh: Pemrograman Lanjut" />

    <!-- Tombol Aksi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:backgroundTint="#CCCCCC"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Simpan"
            android:backgroundTint="#FFD700"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>
