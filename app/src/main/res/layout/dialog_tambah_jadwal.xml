<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#1E275D"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:layout_margin="16dp">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Baru"
            android:textColor="#E6FF60"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Mata Kuliah -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mata Kuliah"
            android:textColor="#FFFFFF" />
        <EditText
            android:id="@+id/etMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Pemrograman Lanjut"
            android:background="@android:color/white" />

        <!-- Hari/Tanggal -->
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari / Tanggal"
            android:textColor="#FFFFFF" />
        <EditText
            android:id="@+id/etTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: Senin, 5 Mei 2025"
            android:background="@android:color/white" />

        <!-- Jam Mulai -->
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Mulai"
            android:textColor="#FFFFFF" />
        <EditText
            android:id="@+id/etJamMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: 08:00"
            android:background="@android:color/white" />

        <!-- Jam Selesai -->
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Selesai"
            android:textColor="#FFFFFF" />
        <EditText
            android:id="@+id/etJamSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: 09:40"
            android:background="@android:color/white" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batal"
                android:backgroundTint="#CCCCCC"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tambah"
                android:backgroundTint="#E6FF60"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
